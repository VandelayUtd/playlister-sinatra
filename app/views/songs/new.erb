<h2>New Song Form</h2>
<form method='POST' action='/songs'>

    <label for="artist_name">Artist Name:</label><br>
    Create New Artist <input type='text' name='Artist Name' id='artist_name'>
    <%Artist.all.each do |artist|%>
        <input type="radio" name="song[artist_ids][]" id=artist_<%=artist.id%> value="artist_<%=artist.id%>"><%=artist.name%><br>
    <%end%>

    <label for='song_name'>Song Name:</label>
    <input type='text' id='song_name' name='Name'> <br>

    <label>Genres:</label><br>
    <%Genre.all.each do |genre|%>
        <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%=genre.name%><br>
    <%end%> <br>


    <button type='submit' value='Create'>Create New Song</button>

</form>